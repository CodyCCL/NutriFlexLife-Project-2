    <form class="exercise-card" id="exerciseForm" action="/exercises" method="post">
        <h1>Post New Exercise</h1>
        <div>
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" required>
        </div>
        <div>
            <label for="name">Exercise Name:</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div>
            <label for="calories">Calories Burned:</label>
            <input type="number" id="calories" name="calories" required>
        </div>
        <div>
            <label for="exerciseType">Exercise Type:</label>
            <input type="text" id="exerciseType" name="exerciseType" required>
        </div>

        <div class="sets-container" id="setsContainer">
            <!-- Sets will be added here -->
        </div>

        <button type="button" id="addSet">Add Set</button>
        <button type="submit">Submit Exercise</button>
    </form>
 <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
   <script>
    $(document).ready(function() {
        let setIndex = 0; // Initialize a counter for the set index

        $('#addSet').click(function() {
            const setHtml = `
                <div class="set">
                    <input type="number" name="sets[${setIndex}][setCount]" placeholder="Set Count" required>
                    <input type="number" name="sets[${setIndex}][repCount]" placeholder="Rep Count" required>
                    <input type="number" name="sets[${setIndex}][repGoal]" placeholder="Rep Goal" required>
                    <input type="number" name="sets[${setIndex}][weight]" placeholder="Weight" required>
                </div>
            `;
            $('#setsContainer').append(setHtml);
            setIndex++; // Increment the index for the next set
        });
    });
    </script>
